@model IEnumerable<OnlineShoppingSystem.Models.Product>
@{
    ViewData["Title"] = "MyOrdercart";
    Layout = "~/Views/Shared/CustomerPageLayout.cshtml";
}
<link rel="stylesheet" href="~/css/Index.css" />
@section head{
    <style type="text/css">
        body {
            background-image: url('/Backgrndimg/Online.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            margin: 0;
        }
    </style>
}
<h1 align="center">Welcome To My Cart</h1>
<div class="row">
    <div class="col-lg-10 col-md-10 col-sm-10">
        @if (TempData["total"] == null)
        {

            <h3>
                Total Bill: 0 Rs
            </h3>
        }
        else
        {
            <h3> Total Bill: @TempData["total"] Rs</h3>

        }

    </div>


    <div class="col-lg-2 col-md-2 col-sm-2">
        <h3 style="color:#808080; font-family:'Arial Rounded MT';text-align:center"> <span class="btn btn-info">@Html.ActionLink("Check Out", "checkout", "MyProductCart")</span></h3>
    </div>




</div>

<div class="row" style="margin-bottom:100px;">
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <table cellpadding="2" cellspacing="2" border="1">

                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>TotalPrice</th>
                    <th>Buy</th>

                </tr>
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>
                        <span><img src="@("~/Image/"+item.ProductImage)" asp-append-version="true" width="100" height="100" /></span>
                    </td>
                    <td>@item.Price</td>
                    <td>
                        <input type="number" min="1" max="10" name="qty" />
                    </td>
                    <td>@item.TotalPrice</td>
                    <td><input type="submit" value="Buy" class="btn btn-warning" /></td>

                </tr>

            </table>


            <h3 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">@item.ProductName <small>@item.Price Rs</small></h3>
            <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center"> <span class="btn btn-danger">@Html.ActionLink("Add To Cart", "MyCart", new { id = @item.ProductId })</span></h4>



        }
    }
</div>