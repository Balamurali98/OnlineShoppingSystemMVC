@model OnlineShoppingSystem.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/RetailerPage.cshtml";
}
<link rel="stylesheet" href="~/css/Index.css" />
<link rel="stylesheet" href="~/css/Index.css" />
@section head{
    <style type="text/css">
        body {
            background-image: url('/Backgrndimg/Retailer.jpeg');
            background-repeat: no-repeat;
            background-size: cover;
            margin: 0;
        }
    </style>
}
<input type="submit" value="Retailer Id:@ViewBag.uid" />
<h1 align="Center">Welcome To Delete Products</h1>

<h3 align="Center">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Product Image
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/Image/"+Model.ProductImage)" asp-append-version="true" width="100" height="100" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Features)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Features)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableProduct)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvailableProduct)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Retailer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Retailer.RetailerName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
